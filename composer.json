{
    "name": "edwinhoksberg/elasticsearch-query-builder",
    "description": "Build and execute an Elasticsearch search query using a fluent PHP API",
    "keywords": [
        "elasticsearch-query-builder",
        "elasticsearch",
        "search"
    ],
    "homepage": "https://github.com/edwinhoksberg/elasticsearch-query-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Edwin Hoksberg",
            "email": "mail@edwinhoksberg.nl",
            "role": "Current developer"
        },
        {
            "name": "Alex Vanderbist",
            "email": "alex.vanderbist@gmail.com",
            "role": "Past developer"
        },
        {
            "name": "Ruben Van Assche",
            "email": "ruben@spatie.be",
            "role": "Past developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "elasticsearch/elasticsearch": "^7.0",
        "friendsofphp/php-cs-fixer": "^3.41",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "EdwinHoksberg\\ElasticsearchQueryBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EdwinHoksberg\\ElasticsearchQueryBuilder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "cs": "vendor/bin/php-cs-fixer check --diff --allow-risky=yes",
        "cs-fix": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
